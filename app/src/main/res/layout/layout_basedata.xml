<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/ll_mybase_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:minHeight="60dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:text="性别：" />

        <RadioGroup
            android:id="@+id/rg_basedata_radioGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="9"
            android:contentDescription="性别："
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_basedata_radioMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="男" />

            <RadioButton
                android:layout_marginLeft="65dp"
                android:id="@+id/rb_basedata_radioFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="女"/>
        </RadioGroup>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_mybase_hight"
        android:layout_below="@id/ll_mybase_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:minHeight="60dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="身高：" />

        <EditText
            android:id="@+id/et_basedata_hight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:numeric="integer"
            android:text="" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:text="CM" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_mybase_bir"
        android:layout_below="@id/ll_mybase_hight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:minHeight="60dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="出生日期：" />

        <EditText
            android:id="@+id/et_basedata_dateDisplay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:enabled="false"
            />

        <Button
            android:id="@+id/bt_basedata_submit"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="@drawable/basedata_calendar"
            android:layout_weight="2"  />

    </LinearLayout>


</LinearLayout>